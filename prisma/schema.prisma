// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["jsonProtocol"]
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

// Necessary for Next auth
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Subject {
  id          String      @id @default(cuid())
  subjectName String
  subjectCode String?
  TimeTable   TimeTable[]

  @@unique([subjectName, subjectCode])
}

model Day {
  id        String      @id @default(cuid())
  dayName   String
  TimeTable TimeTable[]

  @@unique([dayName])
}

model TimeSlots {
  id        String      @id @default(cuid())
  startTime String
  endTime   String
  TimeTable TimeTable[]

  @@unique([startTime, endTime])
}

model TimeTable {
  id         String    @id @default(cuid())
  subject    Subject   @relation(fields: [subjectId], references: [id])
  subjectId  String
  day        Day       @relation(fields: [dayId], references: [id])
  dayId      String
  timeSlot   TimeSlots @relation(fields: [timeSlotId], references: [id])
  timeSlotId String

  @@unique([subjectId, dayId, timeSlotId])
  @@index([subjectId])
  @@index([dayId])
  @@index([timeSlotId])
}
